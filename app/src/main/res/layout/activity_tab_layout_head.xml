<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lib.utils.tablayout.activity.TabLayoutHeadActivity">

    <include layout="@layout/layout_top_bar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tab_layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/blue_an"
        app:tabIndicatorColor="@color/blue_an"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_tab_layout_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>

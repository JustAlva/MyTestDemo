<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <com.lib.utils.views.MyReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--扫描二维码-->
            <com.lib.utils.views.MenuLinearLayout
                android:id="@+id/ml_find_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconLeft="@drawable/icon_scan"
                app:iconRight="@drawable/arow_right"
                app:textContent="扫描" />
            <!--时间选择器-->
            <com.lib.utils.views.MenuLinearLayout
                android:id="@+id/ml_find_datepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconLeft="@drawable/icon_scan"
                app:iconRight="@drawable/arow_right"
                app:textContent="时间选择器" />
            <!--CoordinatorLayout-->
            <com.lib.utils.views.MenuLinearLayout
                android:id="@+id/ml_find_coordinatorlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconLeft="@drawable/icon_layout"
                app:iconRight="@drawable/arow_right"
                app:textContent="CoordinationLayout相关" />
            <!--日历-->
            <com.lib.utils.views.MenuLinearLayout
                android:id="@+id/ml_find_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconLeft="@drawable/icon_calendar"
                app:iconRight="@drawable/arow_right"
                app:textContent="日历" />
            <!--定位-->
            <com.lib.utils.views.MenuLinearLayout
                android:id="@+id/ml_find_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconLeft="@drawable/icon_location"
                app:iconRight="@drawable/arow_right"
                app:textContent="定位" />
            <!--图片选择-->
            <com.lib.utils.views.MenuLinearLayout
                android:id="@+id/ml_find_select_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconLeft="@drawable/icon_pic"
                app:iconRight="@drawable/arow_right"
                app:textContent="图片选择" />
            <!--文件下载-->
            <com.lib.utils.views.MenuLinearLayout
                android:id="@+id/ml_find_file_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconLeft="@drawable/icon_pic"
                app:iconRight="@drawable/arow_right"
                app:textContent="文件下载" />
        </LinearLayout>
    </com.lib.utils.views.MyReboundScrollView>
</LinearLayout>
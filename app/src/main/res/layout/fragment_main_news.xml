<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar" />

    <com.lib.utils.views.MyReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="Layout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/line_color" />
            <!--MaterialDialog-->
            <com.lib.utils.views.MenuLinearLayout
                android:id="@+id/ml_news_material_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconLeft="@drawable/icon_dialog"
                app:iconRight="@drawable/arow_right"
                app:textContent="MaterialDialog" />
            <!--drawable_topbar-->
            <com.lib.utils.views.MenuLinearLayout
                android:id="@+id/ml_news_material_drawable_topbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconLeft="@drawable/icon_dialog"
                app:iconRight="@drawable/arow_right"
                app:textContent="DrawableTopBar" />
            <!--test-->
            <com.lib.utils.views.MenuLinearLayout
                android:id="@+id/ml_news_material_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconLeft="@drawable/icon_dialog"
                app:iconRight="@drawable/arow_right"
                app:textContent="Test" />
        </LinearLayout>
    </com.lib.utils.views.MyReboundScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_linear_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_linear_menu_icon_left"
            android:layout_width="@dimen/img_menu_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_edge" />

        <TextView
            android:id="@+id/tv_linear_menu_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_edge"
            android:layout_weight="1"
            android:textSize="@dimen/font_title" />

        <ImageView
            android:id="@+id/img_linear_menu_icon_point"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/icon_point"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_linear_menu_icon_right"
            android:layout_width="@dimen/img_menu_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_edge"
            android:src="@drawable/arow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_marginLeft="12dp"
        android:background="@color/line_color" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:tabIndicatorHeight="0dp"
    app:tabSelectedTextColor="#646464"
    android:id="@+id/tl_main_tab"
    app:tabTextColor="#888888"
   >

    <android.support.design.widget.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/tab_icon_follow"
        android:text="首页"
        android:textAlignment="center"
        />

    <android.support.design.widget.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发现"
        android:textAlignment="center"
        android:icon="@drawable/tab_icon_find" />

    <android.support.design.widget.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息"
        android:textAlignment="center"
        android:icon="@drawable/tab_icon_news" />

    <android.support.design.widget.TabItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的"
        android:textAlignment="center"
        android:icon="@drawable/tab_icon_personal" />
</android.support.design.widget.TabLayout>